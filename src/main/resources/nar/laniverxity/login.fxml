<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/" xmlns:fx="http://javafx.com/fxml/"
            prefHeight="500.0" prefWidth="750.0"
            style="-fx-background-image: url('/assets/login-background.png'); -fx-background-size: 750 500;"
            fx:controller="nar.laniverxity.LoginController">
    <center>
        <VBox alignment="CENTER" BorderPane.alignment="CENTER">
            <VBox alignment="CENTER" maxWidth="276.0" minWidth="276.0" prefWidth="276.0"
                  style="-fx-background-color: #FFFFFF; -fx-background-radius: 10; -fx-border-color: #FFFFFF; -fx-border-radius: 10;">
                <ImageView fitHeight="233.0" fitWidth="276.0" pickOnBounds="true" preserveRatio="true">
                    <VBox.margin>
                        <Insets top="5.0"/>
                    </VBox.margin>
                    <Image url="@/assets/login-header.png"/>
                </ImageView>
                <Label text="Welcome to LAniveRXity" textFill="#09AFDD">
                    <VBox.margin>
                        <Insets bottom="10.0" top="10.0"/>
                    </VBox.margin>
                    <font>
                        <Font name="Segoe UI Black" size="16.0"/>
                    </font>
                </Label>
                <TextField maxWidth="236.0" minWidth="236.0" prefWidth="236.0" promptText="Email Address"
                           style="-fx-background-color: #FFFFFF; -fx-background-radius: 10; -fx-border-color: #B5BDC9; -fx-border-radius: 10;"
                           fx:id="tfEmailAddress">
                    <VBox.margin>
                        <Insets bottom="5.0" top="5.0"/>
                    </VBox.margin>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <font>
                        <Font name="Segoe UI Semibold" size="12.0"/>
                    </font>
                    <cursor>
                        <Cursor fx:constant="TEXT"/>
                    </cursor>
                </TextField>
                <PasswordField maxWidth="236.0" minWidth="236.0" prefWidth="236.0" promptText="Password"
                           style="-fx-background-color: #FFFFFF; -fx-background-radius: 10; -fx-border-color: #B5BDC9; -fx-border-radius: 10;"
                           fx:id="tfPassword">
                    <VBox.margin>
                        <Insets bottom="5.0" top="5.0"/>
                    </VBox.margin>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <font>
                        <Font name="Segoe UI Semibold" size="12.0"/>
                    </font>
                    <cursor>
                        <Cursor fx:constant="TEXT"/>
                    </cursor>
                </PasswordField>
                <Label maxWidth="236.0" minWidth="236.0" prefWidth="236.0" textFill="#F87171"
                       fx:id="lblErrorMessage">
                    <VBox.margin>
                        <Insets bottom="5.0" top="5.0"/>
                    </VBox.margin>
                    <font>
                        <Font name="Segoe UI Black" size="12.0"/>
                    </font>
                </Label>
                <Button alignment="CENTER" maxWidth="236.0" minWidth="236.0" prefWidth="236.0"
                        style="-fx-background-color: #09AFDD; -fx-background-radius: 10; -fx-border-radius: 10;"
                        text="Login" textFill="WHITE"
                        onAction="#loginAction">
                    <VBox.margin>
                        <Insets bottom="20.0" top="10.0"/>
                    </VBox.margin>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <font>
                        <Font name="Segoe UI Black" size="12.0"/>
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
            </VBox>
        </VBox>
    </center>
</BorderPane>